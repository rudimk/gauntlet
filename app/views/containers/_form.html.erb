<%= form_for @container, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :subdomain, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :subdomain, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :port, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :port, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :state, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :state, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :root, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :root, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ended, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :ended, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  containers_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
